<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="match_parent">
                <EditText
                    android:id="@+id/etLoginCorreo"
                    android:layout_width="223dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="47dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginBottom="14dp"

                    android:background="@drawable/edittextlogin"
                    android:drawableStart="@drawable/user"
                    android:ems="10"
                    android:fontFamily="@font/titleslittlesquare"
                    android:hint="@string/hint_ingresar_correo"
                    android:inputType="textEmailAddress"
                    android:padding="20dp"
                    android:textColorHint="#343434"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/etLoginPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <EditText
                    android:id="@+id/etLoginPassword"
                    android:layout_width="231dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="47dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/edittextlogin"
                    android:drawableStart="@drawable/lock"
                    android:ems="10"
                    android:fontFamily="@font/titleslittlesquare"
                    android:hint="@string/hint_ingresar_password"
                    android:inputType="textPersonName|textPassword"
                    android:padding="20dp"
                    android:textColorHint="#343434"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/btnLogin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLoginCorreo" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="206dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="78dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="79dp"
                    android:background="@drawable/botonnaranja"
                    android:drawableRight="@drawable/flecha"
                    android:fontFamily="@font/titleslittlesquare"
                    android:padding="10dp"
                    android:text="@string/btn_iniciar_sesion"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/olvidastec"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.571"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLoginPassword" />

                <Button
                    android:id="@+id/btnRegistro"
                    android:layout_width="196dp"
                    android:layout_height="38dp"

                    android:layout_marginStart="38dp"
                    android:layout_marginEnd="38dp"
                    android:layout_marginBottom="34dp"
                    android:background="@drawable/botonverde"
                    android:fontFamily="@font/titleslittlesquare"
                    android:text="@string/btn_registro"
                    android:textColor="#5AD126"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/olvidastec" />

                <Button
                    android:id="@+id/olvidastec"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="316dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/titleslittlesquare"
                    android:text="¿Olvidaste tu contraseña?"
                    android:textColor="#008000"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toTopOf="@+id/btnRegistro"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="103dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="103dp"
                    android:fontFamily="@font/titleslittlesquare"
                    android:text="¡Bienvenido!"
                    android:textColor="#ED8D13"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/titleslittlesquare"
                    android:text="Ingresa los datos que se requieren para iniciar sesion"
                    android:textColor="#717D7E"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/etLoginCorreo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="213dp"
                    android:layout_height="89dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.524"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_principal" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
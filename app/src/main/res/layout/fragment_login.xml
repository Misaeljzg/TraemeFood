<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="match_parent">

                <EditText
                    android:id="@+id/etLoginCorreo"
                    android:layout_width="321dp"
                    android:layout_height="56dp"

                    android:layout_marginStart="38dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="52dp"
                    android:layout_marginBottom="3dp"

                    android:drawableStart="@drawable/user"
                    android:ems="10"

                    android:hint="@string/hint_ingresar_correo"
                    android:inputType="textEmailAddress"
                    android:padding="20dp"
                    android:background="@drawable/edittextlogin"
                    android:fontFamily="@font/carlitobold"
                    android:textColorHint="#CACFD2"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <EditText
                    android:id="@+id/etLoginPassword"
                    android:layout_width="321dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="52dp"
                    android:background="@drawable/edittextlogin"
                    android:drawableStart="@drawable/lock"
                    android:ems="10"
                    android:fontFamily="@font/carlitobold"
                    android:hint="@string/hint_ingresar_password"
                    android:inputType="textPersonName|textPassword"
                    android:padding="20dp"
                    android:textColorHint="#CACFD2"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="262dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/botonnaranja"
                    android:drawableRight="@drawable/flecha"
                    android:fontFamily="@font/carlitoregular"
                    android:padding="10dp"
                    android:text="@string/btn_iniciar_sesion"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toTopOf="@+id/olvidastec"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnRegistro"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="196dp"
                    android:layout_height="38dp"

                    android:layout_marginStart="107dp"
                    android:layout_marginEnd="108dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/carlitoregular"
                    android:text="@string/btn_registro"
                    android:textColor="#979A9A"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/olvidastec"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="316dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="53dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/carlitoregular"
                    android:text="¿Olvidaste tu contraseña?"
                    android:textColor="#E59866"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/btnRegistro"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/carlitobold"
                    android:text="Ingresa tu contraseña:"
                    android:textColor="#979A9A"
                    app:layout_constraintBottom_toTopOf="@+id/etLoginPassword"
                    app:layout_constraintEnd_toStartOf="@+id/etLoginPassword"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLoginCorreo" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginEnd="187dp"
                    android:layout_marginBottom="14dp"
                    android:fontFamily="@font/carlitobold"
                    android:text="Ingresa tu correo electronico:"
                    android:textColor="#979A9A"
                    app:layout_constraintBottom_toTopOf="@+id/etLoginCorreo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="95dp"
                    android:layout_height="4dp"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="278dp"
                    android:layout_marginBottom="28dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:srcCompat="@drawable/linea" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="213dp"
                    android:layout_height="105dp"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="160dp"
                    android:layout_marginBottom="13dp"
                    android:fontFamily="@font/carlitoregular"
                    android:text="Bienvenido a Traeme Food"
                    android:textSize="40sp"
                    app:layout_constraintBottom_toTopOf="@+id/imageView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="39dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="334dp"
                    android:layout_marginBottom="31dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logoblancosolo" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="12dp"

                    android:layout_marginEnd="285dp"
                    android:fontFamily="@font/carlitobold"
                    android:text="Elige un perfil:"
                    android:textColor="#979A9A"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.133"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLoginPassword" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".sesion.ForgotActivity">


    <EditText
        android:id="@+id/sendCorreo"
        android:layout_width="321dp"
        android:layout_height="56dp"

        android:layout_marginStart="38dp"
        android:layout_marginTop="60dp"

        android:layout_marginEnd="52dp"
        android:background="@drawable/edittextlogin"

        android:drawableStart="@drawable/user"
        android:ems="10"
        android:fontFamily="@font/carlitobold"
        android:hint="@string/hint_ingresar_correo"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColorHint="#CACFD2"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnsend"
        android:layout_width="262dp"
        android:layout_height="51dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="151dp"
        android:background="@drawable/botonnaranja"
        android:drawableRight="@drawable/flecha"
        android:fontFamily="@font/carlitobold"
        android:padding="10dp"
        android:text="Recuperar Contraseña"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLoginCorreo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="350sp"

        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/carlitobold"
        android:text="Ingresa tu correo electronico con el que te registraste para recuperar tu contraseña "
        android:textColor="#979A9A"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="93dp"
        android:layout_height="8dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="278dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/linea" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/carlitoregular"
        android:text="¿Tienes Problemas Para Iniciar sesión?"
        android:textSize="44sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="334dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoblancosolo" />

</androidx.constraintlayout.widget.ConstraintLayout>
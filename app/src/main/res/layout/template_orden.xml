<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="414dp"
        android:layout_height="146dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_orden_borrar"
            android:layout_width="88dp"
            android:layout_height="54dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/botonrojo"
            android:drawableTop="@drawable/borrar"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_orden_cantidad"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.717" />

        <TextView
            android:id="@+id/tv_orden_cantidad"
            android:layout_width="67dp"
            android:layout_height="22dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="87dp"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/osregular"
            android:text="TextView"
            android:textColor="#7B7D7D"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_orden_borrar"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/tv_orden_precio" />

        <TextView
            android:id="@+id/tv_orden_nombre_platillo"
            android:layout_width="104dp"
            android:layout_height="32dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="17dp"
            android:fontFamily="@font/osbold"
            android:text="TextView"
            android:textColor="#232323"
            android:textSize="23sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_orden_precio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_orden_precio"
            android:layout_width="67dp"
            android:layout_height="22dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="87dp"
            android:fontFamily="@font/osregular"
            android:text="TextView"
            android:textColor="#7B7D7D"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_orden_borrar"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/tv_orden_nombre_platillo" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="63dp"
            android:layout_height="20dp"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/oslight"
            android:text="Cantidad:"
            android:textColor="#B3B6B7"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_orden_cantidad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/oslight"
            android:text="Precio:"
            android:textColor="#B3B6B7"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/tv_orden_precio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_orden_nombre_platillo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
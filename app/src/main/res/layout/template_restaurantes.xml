<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="restaurante"
            type="com.misaeljzg.traemefood.utils.Restaurante" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:padding="2dp"
        android:layout_height="match_parent"
        android:focusable="false">


        <TextView
            android:id="@+id/tv_vistarestaurantes_NombreRestaurante"
            android:layout_width="245dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/namerestaurante"
            android:fontFamily="@font/carlitobold"
            android:text="@{restaurante.nombreRes}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#424949"
            android:textSize="27sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_vistarestaurantes_Descripcion"
            app:layout_constraintEnd_toStartOf="@+id/card_view"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_vistarestaurantes_Descripcion"
            android:layout_width="210dp"
            android:layout_height="56dp"
            android:layout_marginStart="10dp"

            android:layout_marginEnd="46dp"
            android:layout_marginBottom="3dp"

            android:fontFamily="@font/carlitoregular"

            android:text="@{restaurante.descRes}"
            android:textColor="#393939"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/card_view"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_vistarestaurantes_NombreRestaurante" />

        <TextView
            android:id="@+id/tv_vistarestaurantes_Direccion"
            android:layout_width="214dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"

            android:layout_marginTop="2dp"
            android:layout_marginEnd="172dp"
            android:layout_marginBottom="1dp"
            android:drawableStart="@drawable/direccion"
            android:fontFamily="@font/carlitoitalic"
android:padding="6dp"
            android:text="@{restaurante.calle + ',' + ' ' + restaurante.colonia}"
            android:textColor="#393939"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.133" />

        <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_vistarestaurantes_NombreRestaurante"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_vistarestaurantes_foto"

                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="16dp"
                        app:imageUrl="@{restaurante.imgPath}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.972"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="211dp"
            android:layout_height="26dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="163dp"
            android:drawableStart="@drawable/time"
            android:fontFamily="@font/carlitoregular"

            android:text="@{restaurante.horario}"
            android:textColor="#393939"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.307"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_vistarestaurantes_Descripcion" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="214dp"
            android:layout_height="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="129dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.137"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/lineadiv" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="76dp"
            android:layout_height="49dp"
            android:layout_marginStart="51dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/botonverde"
            android:drawableRight="@drawable/flecha"
            android:fontFamily="@font/carlitobold"
            android:padding="17dp"
            android:text=" "
            android:textColor="#FDFEFE"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

